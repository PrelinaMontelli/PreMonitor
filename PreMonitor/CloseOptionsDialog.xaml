<Window x:Class="PreMonitor.CloseOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关闭选项" 
        Height="380" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <DockPanel Margin="20" LastChildFill="False">
        <!-- 按钮区域固定在底部 -->
        <StackPanel DockPanel.Dock="Bottom" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button x:Name="OkButton" 
                   Content="确定" 
                   Click="OkButton_Click"
                   Width="80" 
                   Height="32" 
                   Margin="0,0,10,0"
                   IsDefault="True"/>
            <Button x:Name="CancelButton" 
                   Content="取消" 
                   Click="CancelButton_Click"
                   Width="80" 
                   Height="32"
                   IsCancel="True"/>
        </StackPanel>
        
        <!-- 复选框固定在按钮上方 -->
        <CheckBox DockPanel.Dock="Bottom"
                 x:Name="RememberChoiceCheckBox"
                 Content="记住我的选择，下次不再询问"
                 HorizontalAlignment="Left"
                 FontSize="11"
                 Margin="0,15,0,10"/>
        
        <!-- 主内容区域 -->
        <StackPanel DockPanel.Dock="Top">
            <!-- 图标和标题 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                <Image Source="pack://application:,,,/icon.ico" 
                       Width="32" 
                       Height="32" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
                <TextBlock Text="您希望如何处理PreMonitor？" 
                          FontSize="14" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- 选项区域 -->
            <StackPanel Margin="10,0">
                <!-- 选项1: 最小化到托盘 -->
                <RadioButton x:Name="MinimizeToTrayRadio" 
                            Content="最小化到系统托盘 (推荐)" 
                            IsChecked="True"
                            Margin="0,5"
                            FontSize="13"
                            FontWeight="SemiBold"/>
                <TextBlock Text="  • 程序将在后台继续监控 Edge 进程"
                          Foreground="Gray" 
                          FontSize="11" 
                          Margin="20,3,0,3"/>
                <TextBlock Text="  • 双击托盘图标可以重新打开窗口"
                          Foreground="Gray" 
                          FontSize="11" 
                          Margin="20,3,0,20"/>
                
                <!-- 选项2: 完全退出 -->
                <RadioButton x:Name="ExitRadio" 
                            Content="完全退出程序" 
                            Margin="0,5"
                            FontSize="13"
                            FontWeight="SemiBold"/>
                <TextBlock Text="  • 停止所有监控功能并关闭程序"
                          Foreground="Gray" 
                          FontSize="11" 
                          Margin="20,3,0,10"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
