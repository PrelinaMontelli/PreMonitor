<Window x:Class="EdgeMonitor.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="关于 Edge Monitor" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource SurfaceBrush}">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧GIF区域 -->
        <StackPanel Grid.Column="0">
            <!-- 动画GIF图片 -->
            <Image x:Name="AboutGif" 
                   gif:ImageBehavior.AnimatedSource="pack://application:,,,/Resources/about.gif"
                   Stretch="Uniform"
                   Margin="10,10,10,20"/>
            
            <!-- 检查更新按钮 -->
            <Button Content="检查更新" 
                   Width="120" 
                   Height="35"
                   HorizontalAlignment="Center"
                   Style="{StaticResource SecondaryButtonStyle}"
                   Click="CheckUpdateButton_Click"
                   Margin="10,0,10,10"/>
        </StackPanel>
        
        <!-- 右侧信息区域 -->
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock Text="Edge Monitor" 
                      FontSize="28"
                      FontWeight="Bold"
                      Foreground="{StaticResource TextBrush}"
                      Margin="0,0,0,10"/>
            
            <TextBlock x:Name="VersionTextBlock"
                      Text="v1.3" 
                      FontSize="16"
                      Foreground="{StaticResource SecondaryTextBrush}"
                      Margin="0,0,0,20"/>
            
            <TextBlock Text="一个监控并弄死Edge的程序" 
                      FontSize="16"
                      Foreground="{StaticResource TextBrush}"
                      TextWrapping="Wrap"
                      Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="作者: " 
                          FontSize="14"
                          Foreground="{StaticResource SecondaryTextBrush}"/>
                <TextBlock FontSize="14">
                    <Hyperlink NavigateUri="https://github.com/PrelinaMontelli" 
                              RequestNavigate="Hyperlink_RequestNavigate"
                              Foreground="{StaticResource PrimaryBrush}"
                              TextDecorations="None">
                        <Run Text="Prelina Montelli" FontWeight="Medium"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            
            <TextBlock Text="启动后监控Microsoft Edge浏览器，当检测到Edge在后台运行且资源占用异常时，会自动终止Edge进程。" 
                      FontSize="12"
                      Foreground="{StaticResource SecondaryTextBrush}"
                      TextWrapping="Wrap"
                      Margin="0,20,0,10"/>
            
            <!-- 开源声明 -->
            <Border Background="{StaticResource WarningBrush}" 
                   CornerRadius="5" 
                   Padding="15,10" 
                   Margin="0,10,0,20">
                <TextBlock Text="⚠️ 该工具完全开源免费！如果你是买的你就被坑了！！" 
                          FontSize="14"
                          FontWeight="Bold"
                          Foreground="White"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"/>
            </Border>
            
            <!-- 按钮区域 -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,10,0,0">
                <Button Content="确定" 
                       Width="80" 
                       Height="30"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
